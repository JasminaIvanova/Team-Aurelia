@page
@model Aurelia.App.Areas.Identity.Pages.Account.ResendEmailConfirmationModel
@using AspNetCore.ReCaptcha
@{
    ViewData["Title"] = "Resend Email confirmation | ";
}

<h1>Resend Email confirmation</h1>
<h2>Enter your email:</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <br />
            @Html.ReCaptcha()
            <recaptcha />
            <br />
            <button type="submit" style="background-color:black; border-color:transparent; color:white;" class="w-100 btn btn-lg btn-primary">Resend</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
