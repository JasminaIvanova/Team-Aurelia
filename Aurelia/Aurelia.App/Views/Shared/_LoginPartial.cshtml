@using Microsoft.AspNetCore.Identity
@inject SignInManager<AureliaUser> SignInManager
@inject UserManager<AureliaUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    @*<li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity">Hello @User.Identity.Name!</a>
    </li>*@
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="btn btn-secondary" style="background-color:transparent; border-color:transparent; color:white; font-family:'Arial Rounded MT'">Logout <i class="fas fa-sign-out-alt" style="color:white"></i></button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-secondary" type="button"  style="background-color:transparent; border-color:transparent; color:white; font-family:'Arial Rounded MT'" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="btn btn-secondary" type="button"  style="background-color:transparent; border-color:transparent; color:white; font-family:'Arial Rounded MT'" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
