@model Aurelia.App.Models.ProductCategories
@{
    ViewData["Title"] = "CreateCategory";
}
<h2 class="text-info">Create Category</h2>
<form asp-action="CreateCategory" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control"></input>
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create"></input>
            <a asp-action="Index" class="btn btn-success">List Categories</a>
        </div>
    </div>
</form>
@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

