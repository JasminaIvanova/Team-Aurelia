@model Aurelia.App.Models.ProductViewModel
@{
    ViewData["Title"] = "EditProduct";
}
<h2 style="color:#094b65">Edit Product</h2>
<form asp-action="EditProduct" method="post"enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label>Product Name</label>
            </div>
            <div class="col-5" style="margin-bottom:1vw">
                <input asp-for="ProductName" class="form-control"></input>
            </div>
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Quantity"></label>
            </div>
            <div class="col-5" style="margin-bottom:1vw">
                <input asp-for="Quantity" class="form-control"></input>
            </div>
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
         <div class="form-group row" >
            <div class="col-2">
                <label asp-for="Price"></label>
            </div>
            <div class="col-5" style="margin-bottom:1vw">
                <input asp-for="Price" class="form-control"></input>
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
         <div class="form-group row">
            <div class="col-2">
                <label asp-for="Description"></label>
            </div>
            <div class="col-5" style="margin-bottom:1vw">
                <input asp-for="Description" class="form-control"></input>
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
         <div class="form-group row" style="margin-bottom:1vw">
            <div class="col-2">
                <label asp-for="Brand"></label>
            </div>
            <div class="col-5">
                <input asp-for="Brand" class="form-control"></input>
            </div>
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>
       <div class="form-group row">
            <div class="col-2">
                <label>Product Category</label>
            </div>
            <div class="col-5">
                <select asp-for="ProductCategoryId" asp-items="ViewBag.productCategorySelectable" class="form-control">
                    <option value="" selected disabled hidden">---Choose category---</option>
                </select>
            </div>
            <span asp-validation-for="ProductCategoryId" class="text-danger"></span>
        </div>

         <div class="col-md-6">  
                        <div class="form-group">  
                            <div class="custom-file">  
                                <input asp-for="ProductImage" class="custom-file-input" id="customFile">  
                            </div>  
                            <span asp-validation-for="ProductImage" class="text-danger"></span>  
                            <input asp-for="ImagePath" value="@ViewBag.Image" type="hidden" />
                        </div>  
                    </div>  
        <div class="form-group">
            <input type="submit" style="margin-top: 1vw; background-color:#1f2833;color: #66fcf1;" class="btn" value="Edit"></input>
            <input type="submit" style="margin-top: 1vw; background-color:#1f2833;color: #66fcf1;" class="btn btn-primary" value="Back"></input>
        </div>
        <div class="col-6">
                <img src = "@Model.ProductImage" Width= "50%" style= "border-radius: 5px; border: 1px solid #efefef"/>
        
            </div>
    </div>
</form>
@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}