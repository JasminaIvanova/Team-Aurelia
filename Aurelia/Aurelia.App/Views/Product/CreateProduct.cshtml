@using System.Collections
@model Aurelia.App.Models.Product
@{
    ViewData["Title"] = "CreateProduct";
}
<h2 class="text-info">Create Product</h2>
<form asp-action="Create Product" method="post"enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Quantity"></label>
            </div>
            <div class="col-5" style="margin-bottom:1vw">
                <input asp-for="Quantity" class="form-control"></input>
            </div>
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
         <div class="form-group row" >
            <div class="col-2">
                <label asp-for="Price"></label>
            </div>
            <div class="col-5" style="margin-bottom:1vw">
                <input asp-for="Price" class="form-control"></input>
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
         <div class="form-group row">
            <div class="col-2">
                <label asp-for="Description"></label>
            </div>
            <div class="col-5" style="margin-bottom:1vw">
                <input asp-for="Description" class="form-control"></input>
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
         <div class="form-group row" style="margin-bottom:1vw">
            <div class="col-2">
                <label asp-for="Brand"></label>
            </div>
            <div class="col-5">
                <input asp-for="Brand" class="form-control"></input>
            </div>
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>
       <div class="form-group row">
            <div class="col-2">
                <label>Product Category</label>
            </div>
            <div class="col-5">
                <select asp-for="ProductTypeId" asp-items="ViewBag.productCategory" class="form-control">
                    <option value="" selected disabled hidden">---Choose category---</option>
                </select>
            </div>
            <span asp-validation-for="ProductTypeId" class="text-danger"></span>
        </div>

         <div style="height:0px;overflow:hidden">
            <input type="file" id="fileInput" name="fileInput" />
        </div>
        <button class="btn btn-secondary" style="background-color:#1f2833" type="button" onclick="chooseFile();">choose file</button>
        <script>
           function chooseFile() {
              $("#fileInput").click();
           }
        </script>
        <div class="form-group">
            <input type="submit" style="margin-top: 1vw" class="btn btn-primary" value="Create"></input>
            @*<a asp-action="Index" class="btn btn-success">List Products</a>*@
        </div>
    </div>
</form>
@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}