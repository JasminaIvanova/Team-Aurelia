@model Aurelia.App.Models.Product
@{
    ViewData["Title"] = "Delete Product | Admin";
}
<h2 style="color:black">Details</h2>
<form asp-action="Delete" method="post"enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label>Product Name</label>
            </div>
            <div class="col-5" style="margin-bottom:1vw">
                <input asp-for="ProductName" class="form-control" readonly="readonly"></input>
            </div>
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Quantity"></label>
            </div>
            <div class="col-5" style="margin-bottom:1vw">
                <input asp-for="Quantity" class="form-control" readonly="readonly"></input>
            </div>
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
         <div class="form-group row" >
            <div class="col-2">
                <label asp-for="Price"></label>
            </div>
            <div class="col-5" style="margin-bottom:1vw">
                <input asp-for="Price" class="form-control" readonly="readonly"></input>
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
         <div class="form-group row">
            <div class="col-2">
                <label asp-for="Description"></label>
            </div>
            <div class="col-5" style="margin-bottom:1vw">
                <input asp-for="Description" class="form-control" readonly="readonly"></input>
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
         <div class="form-group row" style="margin-bottom:1vw">
            <div class="col-2">
                <label asp-for="Brand"></label>
            </div>
            <div class="col-5">
                <input asp-for="Brand" class="form-control" readonly="readonly"></input>
            </div>
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>
       <div class="form-group row">
            <div class="col-2">
                <label>Product Category</label>
            </div>
            <div class="col-5">
                <select id="category" asp-for="ProductCategoryId" asp-items="ViewBag.productCategorySelectable" readonly="readonly" class="form-control">
                    $('#category').attr('disabled',false);
                </select>
            </div>
            <span asp-validation-for="ProductCategoryId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" style="margin-top: 1vw;  background-color:black;color: white;" class="btn " value="Delete"></input>
            <input type="submit" style="margin-top: 1vw; background-color:black;color: white;" class="btn " value="Back"></input>
</form>
<div class="col-6">
                <img src = "~/images/@Model.Image" Width= "50%" style= "margin-top:1vw;border-radius: 5px; border: 1px solid #efefef"/>
            </div>
@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}